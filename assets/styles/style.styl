// chat 
.chat
  max-width 1000px

.chat-option
  width 100%
  background-color #CACACA
  height 40px
  color #5E5D5D
  i
    font-size 1.3em
    margin-top 10px
    margin-left 10px
    color #5E5D5D
  .pan-heure
    font-size 0.9em
    i
      margin-right 10px
      margin-left 3px
      padding 0 !important

.chat-messages
  width 100%
  height 400px
  overflow-y scroll
  padding 10px
  border 1px solid #bbb
  border-bottom 10px

.msg
  margin 10px 5px
  width 50% !important
  position relative

.msg-from
  padding 7px
  background-color #07BD90
  color white
  -webkit-border-radius 15px 15px 0 15px
  border-radius 15px 15px 0 15px

.msg-to
  padding 7px
  background-color #868686
  color white
  -webkit-border-radius 15px 15px 15px 0
  border-radius 15px 15px 15px 0

.msg-info
  margin-top 5px
  font-size 12px

.chat-textarea
  width 100%
  height 70px
  max-height 100px

.wrapper
  min-height 100%
  position relative

footer
  width 100%
  position absolute
  bottom 0
  left 0
  color #A9A9A9

.logo
  display block
  margin 0 auto

#content
  width 70%
  margin 100px auto

.circular
  width 250px
  height 250px
  border-radius 150px
  -webkit-border-radius 150px
  -moz-border-radius 150px

.hello-img
  display block
  margin 40px auto

